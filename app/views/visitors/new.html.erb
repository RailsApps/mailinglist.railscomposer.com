<% content_for :title do Rails.application.secrets.domain_name end %>
<% content_for :description do %>Sign up for our mailing list<% end %>
<section>
  <div class="column">
    <h2>Stay in touch.</h2>
  </div>
  <div class="column">
    <div class="form-centered">
      <%= simple_form_for @visitor do |f| %>
        <%= f.error_notification %>
        <%= f.input :email, label: false, :placeholder => 'Your email address...' %>
        <br/>
        <%= f.button :submit, "Sign up for the mailing list", :class => "submit" %>
      <% end %>
    </div>
  </div>
</section>
